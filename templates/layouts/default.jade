		link(href="/styles/site.min.css", rel="stylesheet")
		link(href="/vendor/font-awesome/css/font-awesome.min.css", rel="stylesheet")

		//-[if lt IE 9]
			script(src="//cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.js")
